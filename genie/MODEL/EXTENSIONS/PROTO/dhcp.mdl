module[dhcp]
{
    class[Relay;
          super=policy/NamedDefinition;
          concrete]
    {
        contained
        {
            parent[class=policy/Space]
        }
        named
        {
            parent[class=*;]
            {
                component[prefix=relay; member=name]
            }
        }

        member[name;  type=ascii/String]
        member[owner; type=ascii/String]
    }

    class[ProviderConfig;
          super=policy/NamedDefinition;
          concrete]
    {
        contained
        {
            parent[class=dhcp/Relay]
        }
        named
        {
            parent[class=*;]
            {
                component[prefix=provider; member=name]
            }
        }

        member[name; type=ascii/String]
        member[addr; type=address/IP]
        member[ctxSeg; type=scalar/UInt32]
        member[dstEpg; type=reference/URI]
    }

    class[Lbl;
          super=policy/NamedDefinition;
          concrete]
    {
        contained
        {
            parent[class=gbp/BridgeDomain]
        }
        dependency[shadow;
                   cardinality=single;
                  ]
        {
            to[class=dhcp/Relay;
               cardinality=many;
              ]
        }
        named
        {
            parent[class=*;]
            {
                component[prefix=lbl; member=name]
            }
        }
    }

    class[Option;
          super=policy/NamedDefinition;
          concrete]
    {
        contained
        {
            parent[class=dhcp/Lbl]
        }
        named
        {
            parent[class=*;]
            {
                component[prefix=option; member=name]
            }
        }

        member[option; type=scalar/UInt32]
    }
}
