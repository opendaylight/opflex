module[span]
{
    # Universe containing all monitoring artifacts
    class[Universe;
    super=policy/Definition;
          concrete;]
    {
        # part of root node
        root
        
        named
        {
            parent[class=*;]
            {
                component[prefix=span;]
            }
        }
    }
    type[ErspanVersion; super=scalar/Enum8]
    {
        const[name=v1; value=1]
        const[name=v2; value=2]
    }

    type[ErspanDestMode; super=scalar/Enum8]
    {
        const[name=visible; value=1]
        const[name=notVisible; value=2]
    }

    type[Direction; super=scalar/Enum8]
    {
        const[name=in; value=1]
        const[name=out; value=2]
        const[name=both; value=3]
    }
    
    class[Session;
          super=policy/Definition;
          concrete;]
    {
        member[label; type=scalar/UInt32]
        contained
        {
            parent[class=span/Universe]
        }
        named
        {
            parent[class=*;]
            {
            }
        }
    }

    class[Grp;
          super=platform/ConfigComponent;
          abstract]

    class[SrcGrp;
          super=span/Grp;
          concrete]
    {
        member[state; type=platform/AdminState]
        member[label; type=scalar/UInt32]
        contained
        {
            parent[class=span/Session]
        }
        named
        {
            parent[class=*;]
            {
                component[prefix=srcgrp;
                          member=name]
            }
        }
    }

    class[DstGrp;
          super=span/Grp;
          concrete]
    {
        contained
        {
            parent[class=span/Session]
        }
        named
        {
            parent[class=*;]
            {
                component[prefix=dstgrp;
                          member=name]
            }
        }
    }

    class[LocalEp;
          super=platform/ConfigComponent;
          concrete]
    {
        member[nic; type=ascii/Name]
        dependency[ep;
                   cardinality=single;
                   ]
        {
            to[class=epr/ReportedNetworkEp;
                cardinality=many;
                ]
        }

        named
        {
            parent[class=*;]
            {
                component[prefix=ep;
                          member=name]
            }
        }
        contained
        {
            parent[class=span/Session]
        }
    }

    class[Member;
          super=policy/NamedComponent;
          abstract]
    {
        dependency[ref;
                   cardinality=single;
                   ]
        {
            to[class=gbp/EpGroup;
                cardinality=many;
                ]

            to[class=span/LocalEp;
                cardinality=many;
                ]
        }

        contained
        {
            parent[class=span/Grp]
        }
        named
        {
            parent[class=*;]
            {
                component[prefix=mem;
                          member=name]
            }
        }
    }

    class[SrcMember;
          super=span/Member;
          concrete]
    {
        member[dir; type=span/Direction]
         contained
        {
            parent[class=span/SrcGrp]
        }
    }

    class[DstMember;
          super=span/Member;
          concrete]
    {
        contained
        {
            parent[class=span/DstGrp]
        }
    }

    class[DstSummary;
          concrete]
    {
        member[dest; type=address/IP]
        member[srcPrefix; type=address/IP]
        member[version; type=span/ErspanVersion]
        member[flowId; type=scalar/UInt16]
        member[ttl; type=scalar/UInt8]
        member[vrfName; type=ascii/Name]
        member[mtu; type=l2/Mtu]
        member[dscp; type=scalar/UInt8]
        member[mode; type=span/ErspanDestMode]

        contained
        {
            parent[class=span/DstMember]
        }
        named
        {
            parent[class=*;]
            {
                component[prefix=summary]
            }
        }
    }
}